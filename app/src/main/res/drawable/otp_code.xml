<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Активное состояние (например, текущая цифра) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#ffffff"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="2dp"
                android:color="#4CAF50"/> <!-- Зеленая рамка -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
            <shadow
                android:color="#55000000"
                android:radius="4dp"/>
        </shape>
    </item>

    <!-- Обычное состояние -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F0F0F0"/>
            <corners android:radius="12dp"/>
            <stroke
                android:width="1dp"
                android:color="#BDBDBD"/> <!-- Светло-серая рамка -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</selector>