<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/avatarImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="24dp"
        android:contentDescription="Аватар пользователя"
        android:scaleType="centerCrop"
        android:background="@drawable/circle_background"/>

    <TextView
        android:id="@+id/userNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"
        tools:text="Иванов Иван Иванович"/>

    <TextView
        android:id="@+id/userEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"
        tools:text="ivanov@example.com"/>

    <TextView
        android:id="@+id/unreadMessagesText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        tools:text="Непрочитанных сообщений: 3"/>

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Выйти"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"/>

    <com.example.vshpauth.CircularTimerView
        android:id="@+id/circularTimer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:progress_color="#751515"
        app:stroke_width="4dp"
        app:background_color="#751515"
        android:layout_margin="6dp"
        app:start_angle="-90"
        app:clockwise="true"
        android:padding="4dp"
        />

</LinearLayout>